.contact
  position relative
  display flex
  align-items flex-start
  justify-content space-between
  
  +respond-to(767px)
    flex-direction column
    align-items center

.contact__wrapper
  width 716px
  
  +respond-to(1439px)
    width 536px
  
  +respond-to(1023px)
    width 376px
  
  +respond-to(767px)
    width 100%

.contact__lines-wrapper
  position relative
  margin-bottom 24px

.contact__address-block
  display flex
  
  +respond-to(1023px)
    flex-direction column

  &:not(:last-child)
    margin-bottom 16px

.contact__address-label
  position relative
  display block
  width 100%
  
  +respond-to(1023px)
    &:not(:last-child)
      margin-bottom 16px

.contact__address-label--half
  width 50%
  
  +respond-to(1023px)
    width 100%

.contact__address-field
  box-sizing border-box
  background #fff
  border 1px solid #dbdbdb
  box-shadow inset 0 1px 4px 0 rgba(191, 184, 176, .33)
  border-radius 2px 0 0 2px
  font-size 14px
  color #484a4d
  line-height 16px
  padding 32px 16px 16px
  width 100%

  .contact__address-label:not(:first-child) &
    border-left none
    
    +respond-to(1023px)
      border-left 1px solid #dbdbdb

.contact__address-textaret
  @extend .contact__address-field
  padding-top 16px
  resize vertical

.contact__validate-error
  border 1px solid $theme_red

.contact__address-label-text
  font-size 10px
  line-height 16px
  font-weight 600
  color #2d3539
  text-transform uppercase
  position absolute
  top 8px
  left 15px

.contact__submit
  margin-top 32px

.contact__submit-btn
  background #fc5245
  border none
  border-radius 40px
  font-size 14px
  line-height 56px
  font-weight 500
  color #fff
  width 244px
  cursor pointer
  text-transform uppercase
  transition .25s ease-out
  display block
  outline none
  
  +respond-to(767px)
    margin auto

  &:hover,
  &:focus
    box-shadow 0 1px 11px 0 rgba(241, 68, 55, .5)

  &:active
    background #ff3121
    box-shadow none

.contact__thanks
  display none

.contact__thanks-msg
  font-size: 18px
  line-height: 32px
  color: #787B80
  font-weight: 400
  padding-left 48px
  font-size 16px
  position relative
  
  &:before
    content ''
    position absolute
    left 0
    top 0
    width 32px
    height 32px
    background transparent url('images/icons/contact-submit.svg') center no-repeat
    
.contact__thanks-btn
  @extend .contact__submit-btn
