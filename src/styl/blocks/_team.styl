.team__wrapper
  display flex
  align-items center
  
  +respond-to(1023px)
    display block
    
.team__image
  img
    margin auto
    display block
    width 100%
    max-width 1140px
    max-height 416px

.team__stats
  background-color #29a5d0
  padding 64px 0
  
  +respond-to(1023px)
    padding 40px 0 32px

.team__stats-list
  display flex
  margin-left auto
  
  +respond-to(1023px)
    margin-left 0
    width 100%
  
  +respond-to(767px)
    flex-direction column
    align-items center

.team__stats-item
  width 262px
  box-sizing content-box
  padding 0 40px
  height 104px
  position relative
  display flex
  flex-direction column
  align-items center
  justify-content center
  color: #fff
  
  +respond-to(1245px)
    padding 0 20px
    width 230px
  
  +respond-to(1023px)
    width 33.33%
    padding 0
  
  +respond-to(767px)
    width 100%
    height 119px
    padding 10px 0
  
  &:not(:last-child):after
    content ''
    position absolute
    width 1px
    background-color #fff
    height 100%
    right 0
    top 0
    opacity .2
    
    +respond-to(767px)
      height 1px
      width 104px
      bottom 0
      top inherit
      left calc(50% - 104px/2)

.team__stats-title
  font-weight 500
  font-size 20px
  color #fff
  letter-spacing .34px
  text-transform uppercase
  position relative
  padding-left 10px
  
  +respond-to(1023px)
    margin-bottom 32px

    & br
        display none
  
  +respond-to(767px)
    font-size 16px
    margin-bottom 14px
    padding-left 0
  
  &:after
    content ''
    position absolute
    width 0
    border-left 1px solid rgba(#fff, .3)
    height 109px
    left -14px
    bottom calc(50% + 8px)
    
    +respond-to(767px)
      display none
  
  &:before
    content ''
    position absolute
    background-color #fff
    height 7px
    width 7px
    left -18px
    top calc(50% - 3.5px)
    border-radius 50%
    
    +respond-to(767px)
      display none

.team__stats-value
  font-size 72px
  color #fff
  line-height 1
  font-weight 900
  margin-bottom 16px
  
  +respond-to(767px)
    font-size 52px

.team__stats-descr
  font-weight 500
  font-size 12px
  color rgba(255, 255, 255, .7)
  line-height 1.4
  text-transform uppercase
  text-align center
