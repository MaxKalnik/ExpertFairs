.process__list
  display flex
  justify-content space-between
  
  +respond-to(767px)
    flex-direction column
    align-items center

.process__item
  max-width 356px
  
  +respond-to(767px)
    &:not(:last-child)
      margin-bottom 32px
  
.process__header
  display flex
  align-items center
  
  +respond-to(767px)
    flex-direction row-reverse
    justify-content flex-end

.process__step
  font-size 159px
  color #f2f2f2
  line-height 1
  font-weight 900
  font-family 'Open Sans'
  
  +respond-to(1023px)
    font-size 128px

.process__name
  margin-right 20px
  min-width 104px
  font-size 14px
  color #484a4d
  line-height: 16px
  font-weight 600
  text-transform uppercase
  
  +respond-to(1023px)
    margin-right 0
  
  +respond-to(767px)
    margin-left 32px

.process__name-icon
  margin-bottom 24px

.process__body
  font-weight 400
  font-size 16px
  color #484a4d
  line-height 24px
  padding 0 32px
  margin-top 23px
  position relative
  
  +respond-to(1023px)
    & br
      display none
  
  +respond-to(767px)
    padding 0
  
  &:before
    content ''
    position absolute
    width 0
    height 60px
    top -30px
    left 8px
    border-left 1px solid #0da6d0
    
    +respond-to(767px)
      display none
  
  &:after
    content ''
    position absolute
    width 7px
    height 7px
    top 33px
    left 5px
    border-radius 50%
    background url('images/oval-blue.svg') center no-repeat
    
    +respond-to(767px)
      display none

.process__link
  color #fe5e3c
  font-weight 700

.process__strong
  color #0da6d0
  font-weight 700
